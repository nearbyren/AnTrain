<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_home_bg"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_8"
            android:background="@drawable/ic_bug_bg"
            tools:ignore="MissingConstraints">


            <!--选项卡-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actv_left"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_32"
                    android:background="@drawable/bg_select_tab_left"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="投口一"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/actv_right"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actv_right"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_32"
                    android:background="@drawable/bg_select_tab_right"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="投口二"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/actv_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--推杆 内外灯 电磁锁-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/ic_bg_01"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/cl_tab"
                tools:ignore="MissingConstraints"
                tools:visibility="visible">
                <!--推杠-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_push_rod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/actv_push_rod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_13"
                        android:text="推杆"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="0.6"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/rg_push_rod"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_weight="1" />

                    <RadioGroup
                        android:id="@+id/rg_push_rod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:orientation="horizontal"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toRightOf="@+id/actv_push_rod"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/mrb_push_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_23"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableLeft="@drawable/radio_selector"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="开"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13" />


                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/mrb_push_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/radio_selector"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="关"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13" />

                    </RadioGroup>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--内灯-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_in"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/cl_out"
                    app:layout_constraintTop_toBottomOf="@+id/cl_push_rod">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/actv_in"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:text="内灯"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="0.6"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/rg_in"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioGroup
                        android:id="@+id/rg_in"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:orientation="horizontal"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toRightOf="@+id/actv_in"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/mrb_in_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_23"
                            android:layout_weight="1"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/radio_selector"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="开"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13" />


                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/mrb_in_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableLeft="@drawable/radio_selector"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="关"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13" />

                    </RadioGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--外灯-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_out"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/cl_in"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_push_rod">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/actv_out"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="外灯"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="0.6"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/rg_out"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioGroup
                        android:id="@+id/rg_out"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:orientation="horizontal"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toRightOf="@+id/actv_out"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/mrb_out_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_23"
                            android:layout_weight="1"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/radio_selector"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="开"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13" />


                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/mrb_out_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableLeft="@drawable/radio_selector"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="关"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13" />

                    </RadioGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--电磁锁-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_lock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/cl_out">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/actv_lock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:text="电磁锁"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="0.6"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/rg_lock"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioGroup
                        android:id="@+id/rg_lock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintLeft_toRightOf="@+id/actv_lock"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/mrb_lock_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_23"
                            android:layout_weight="1"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/radio_selector"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="开"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13" />


                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/mrb_lock_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/radio_selector"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="关"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13" />

                    </RadioGroup>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--内摄像头-->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actv_in_camera"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/shape_debug_zuli_bg"
                    android:gravity="center"
                    android:text="内摄像头预览"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/actv_out_camera"
                    app:layout_constraintTop_toBottomOf="@+id/cl_lock" />

                <!-- 外摄像头-->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actv_out_camera"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/shape_debug_zuli_bg"
                    android:gravity="center"
                    android:text="外摄像头预览"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/actv_in_camera"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_lock" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--校准-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/ic_bg_02"
                app:layout_constraintTop_toBottomOf="@+id/cl_content1"
                tools:ignore="MissingConstraints">

                <!--阻力值-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_booster"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@drawable/shape_debug_zuli_bg"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/actv_zl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:gravity="center"
                        android:text="阻力阈值"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="0.5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/del"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="spread" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/del"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintHorizontal_weight="0.3"
                        app:layout_constraintLeft_toRightOf="@+id/actv_zl"
                        app:layout_constraintRight_toLeftOf="@+id/acet_boost"
                        app:layout_constraintVertical_chainStyle="spread" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/acet_boost"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:digits="1234567890"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text="200"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="0.2"
                        app:layout_constraintLeft_toRightOf="@+id/del"
                        app:layout_constraintRight_toLeftOf="@+id/add"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintVertical_chainStyle="spread" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/add"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintHorizontal_weight="0.3"
                        app:layout_constraintLeft_toRightOf="@+id/acet_boost"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintVertical_chainStyle="spread" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actv_clear_peel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/ic_btn_bug"
                    android:gravity="center"
                    android:text="清零去皮"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_booster" />

                <RadioGroup
                    android:id="@+id/rg_kg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:visibility="invisible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/actv_clear_peel">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/mrb_kg1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_selector"
                        android:drawablePadding="@dimen/dp_2"
                        android:text="2kg校准"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12" />


                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/mrb_kg2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_selector"
                        android:drawablePadding="@dimen/dp_2"
                        android:text="25kg校准"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/mrb_kg3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_selector"
                        android:drawablePadding="@dimen/dp_2"
                        android:text="100kg校准"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12" />


                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/mrb_kg4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_selector"
                        android:drawablePadding="@dimen/dp_2"
                        android:text="板框校准"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone" />

                </RadioGroup>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actv_weighing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:background="@drawable/ic_btn_bug"
                    android:gravity="center"
                    android:text="称重前校准"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rg_kg" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_0_1"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:visibility="invisible"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/actv_weighing"
                    app:layout_constraintLeft_toRightOf="@+id/actv_weighing"
                    app:layout_constraintRight_toRightOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- 返回-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/actv_return"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@drawable/shape_input_delivery_bg"
                android:gravity="center"
                android:text="关闭"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_content2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/actv_reporting"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@drawable/shape_input_delivery_bg"
                android:gravity="center"
                android:text="日志信息"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/actv_return" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/actv_get_state_desktop"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@drawable/shape_input_delivery_bg"
                android:gravity="center"
                android:text="切换到桌面"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/actv_reporting"
                app:layout_constraintTop_toBottomOf="@+id/actv_return" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/actv_look_weigh"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@drawable/shape_input_delivery_bg"
                android:gravity="center"
                android:text="查看当前重量"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"

                app:layout_constraintLeft_toRightOf="@+id/actv_get_state"
                app:layout_constraintTop_toBottomOf="@+id/cl_content2" />
            <!-- 查看柜体信息-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/actv_get_state"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:background="@drawable/shape_input_delivery_bg"
                android:gravity="center"
                android:text="查看柜体信息"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/actv_return"
                app:layout_constraintTop_toBottomOf="@+id/cl_content2" />


            <!--柜体状态-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_zhuti"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/blue"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actv_get_state_close"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_42"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:background="@drawable/shape_input_delivery_bg"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="关闭查看信息\n(每500毫秒会刷新最新数据)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_8"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actv_cabinet_state1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="格口一  "
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/actv_cabinet_state2"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actv_cabinet_state2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="格口二"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/actv_cabinet_state1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--分割线-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.60" />

            <!--称重提示语-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_weight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@color/red"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_marginBottom="-1000dp"
                tools:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actv_prompt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="正在进行称重校准前处理，请勿操作其他"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>